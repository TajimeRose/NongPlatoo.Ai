# Production Environment Configuration for nongplatoo.online
# Copy values from this file to Coolify Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-production-secret-key-change-this

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration (REQUIRED - Get from Coolify PostgreSQL)
DATABASE_URL=postgresql://user:password@hostname:5432/database
POSTGRES_HOST=hostname
POSTGRES_PORT=5432
POSTGRES_DB=database
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# CORS Configuration
CORS_ORIGINS=https://nongplatoo.online

# Chat Configuration
CHAT_TIMEOUT_SECONDS=60

# Firebase Configuration (Optional - if using Firebase auth)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# Logging Configuration
LOG_LEVEL=INFO
