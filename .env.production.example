# World Journey AI - PRODUCTION ENVIRONMENT CONFIGURATION
# ⚠️ IMPORTANT: This is a template. Copy and update values for your production environment.
# Never commit actual secrets to version control.

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
PORT=8000
SECRET_KEY=use-a-strong-random-key-here-min-32-characters

# ============================================================================
# CRITICAL: OpenAI Configuration
# ============================================================================
# Required for AI chatbot functionality
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:your-password@db:5432/world_journey_ai

# Optional: Database connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=False

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Configuration (if using authentication)
JWT_SECRET_KEY=use-a-strong-random-key-here-min-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# OPTIONAL: Google Maps API
# ============================================================================
# Used for location-aware search and geocoding
GOOGLE_MAPS_API_KEY=AIza_your_api_key_here

# ============================================================================
# OPTIONAL: Firebase Configuration
# ============================================================================
# For user authentication (optional)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# APPLICATION BEHAVIOR
# ============================================================================
# Semantic model preloading (set to true for better performance)
PRELOAD_SEMANTIC_MODEL=True

# Request timeout for external APIs (seconds)
REQUEST_TIMEOUT=30

# Cache TTL for results (seconds)
CACHE_TTL=30

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=20

# ============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# ============================================================================
# For Coolify deployment
COOLIFY_DATABASE_URL=${DATABASE_URL}
COOLIFY_SECRET_KEY=${SECRET_KEY}

# For Heroku deployment (if using)
# REDIS_URL=redis://...

# For AWS deployment (if using)
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# S3_BUCKET=...
